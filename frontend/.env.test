# 测试环境配置
NODE_ENV=test
VITE_NODE_ENV=test

# API 基础地址
VITE_API_BASE_URL=http://localhost:8000

# 应用标题
VITE_APP_TITLE=闪电推送系统 - 测试环境

# 调试模式
VITE_DEBUG=true

# 应用版本
VITE_APP_VERSION=1.0.0-test

# 环境标识
VITE_ENV_NAME=test
VITE_ENV_DISPLAY_NAME=测试环境

# 日志级别 (debug, info, warn, error)
VITE_LOG_LEVEL=info

# 是否启用 Mock 数据
VITE_USE_MOCK=false

# WebSocket 地址
VITE_WS_BASE_URL=ws://localhost:8000

# 文件上传大小限制 (MB)
VITE_UPLOAD_SIZE_LIMIT=20

# 是否显示环境标识
VITE_SHOW_ENV_TAG=true

# 开发工具
VITE_DEV_TOOLS=true

# 测试相关配置
VITE_TEST_MODE=true
VITE_API_TIMEOUT=10000
